<div class="container" ng-app="jobBoard">
  <h1>Ryan's Job Board</h1>

  <div ng-controller="jobsController">
    <div class="well text-center">
      <h3>Add a New Job</h3>
      <br />
      <form ng-submit="addJob()">
        <div job-form job="newJob"></div>
        <div class="row">
          <div class="col-xs-12 text-right">
            <br />
            <input type="Submit" value="Add Job" class="btn btn-success btn-lg" />
          </div>
        </div>
      </form>
    </div>

    <h3>Current Jobs</h3>
    <hr />
    <table class="table table-bordered table-striped">
      <thead>
        <tr>
          <th>Date</th>
          <th>Job Poster</th>
          <th>Category</th>
          <th>Location</th>
          <th>Status</th>
          <th>&nbsp;</th>
          <th>&nbsp;</th>
        </tr>
      </thead>
      <tbody>
        <tr ng-show="!jobs.length">
          <td colspan="7">No Jobs Posted.</td>
        </tr>
        <tr ng-repeat="job in jobs">
          <td>{{ job.date | date: 'MMMM d, yyyy' }}</td>
          <td>{{ job.author }}</td>
          <td>{{ job.category }}</td>
          <td>{{ job.location }}</td>
          <td>{{ job.status }}</td>
          <td><a class="btn btn-warning" ng-click="editJob($index)" data-toggle="modal" data-target="#myModal">Edit</a></td>
          <td><a class="btn btn-danger" ng-click="deleteJob($index)">Remove</a></td>
        </tr>
      </tbody>
    </table>

    <!-- Modal -->
    <div class="modal fade" id="myModal" my-modal role="dialog">
      <div class="modal-dialog modal-lg">

        <!-- Modal content-->
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">Edit Job</h4>
          </div>
          <div class="modal-body">
            <form ng-submit="saveJob()">
              <div job-form job="jobToEdit"></div>
              <div class="row">
                <div class="col-xs-12 text-right">
                  <br />
                  <input type="Submit" value="Save" class="btn btn-success btn-lg" />
                </div>
              </div>
            </form>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          </div>
        </div>

      </div>
    </div>

  </div>
</div>
